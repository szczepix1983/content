    if ($(".mod-footer"))
    {
        $.ajax({
            url: 'https://idf.maxserver.pl/endpoints/get_refresh_time.php',
            success: function(response)
            {
                let response_parsed = JSON.parse(response);

                let translation = {
                    'XAGPLN': 'kurs srebra',
                    'XAUPLN': 'kurs złota'
                };

                let date = response_parsed.time.date;
                let hour = response_parsed.time.hour;

                let html = "<span>Data ostatniej aktualizacji: "+date+" "+hour;
                let data = response_parsed.data;
                for (let metal in response_parsed.data)
                {
                    if (typeof translation[metal] !== 'undefined')
                    {
                        html += ", "+translation[metal]+": "+parseFloat(data[metal]).toFixed(2).replace(".", ",") + " zł";
                    }
                }
                html +=     "</span>";

                $(".mod-footer .exchange_data").empty().html(html);
            }
        });
    }
});
